local FarmTab = Window:Tab({ Title = "üöú ‡∏ü‡∏≤‡∏£‡πå‡∏°", Icon = "leaf" })
local EventTab = Window:Tab({ Title = "üé© ‡∏≠‡∏µ‡πÄ‡∏ß‡∏ô‡∏ó‡πå", Icon = "gem" })
local ShopTab = Window:Tab({ Title = "üõí ‡∏£‡πâ‡∏≤‡∏ô‡∏Ñ‡πâ‡∏≤", Icon = "shopping-cart" })
local MiscTab = Window:Tab({ Title = "‚öôÔ∏è ‡∏≠‡∏∑‡πà‡∏ô‡πÜ", Icon = "settings" })

-- ==========================
-- Variables
-- ==========================
local player = game.Players.LocalPlayer
local homeSaved, warnedNoBat, warnedNoSave = false, false, false
local autoAttackEnabled, autoCollectEnabled, sellingEnabled = false, false, false
local startFarming, hasWarpedToHome = false, false
local homePosition, lerpSpeed, floatOffset = nil, 0.5, 5
local cooldownTime, lastSellTime = 20, 0
local attackDelay, lastAttackTime = 0.2, 0

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local equipRemote = ReplicatedStorage.Remotes:WaitForChild("EquipBestBrainrots")
local sellRemote = ReplicatedStorage.Remotes:WaitForChild("ItemSell")
local attackRemote = ReplicatedStorage.Remotes.AttacksServer:WaitForChild("WeaponAttack")

-- ==========================
-- Save Home
-- ==========================
local function saveHomePosition()
    if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        homePosition = player.Character.HumanoidRootPart.Position
        homeSaved = true
        l:Notify({ Title = "‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏ö‡πâ‡∏≤‡∏ô‡πÅ‡∏•‡πâ‡∏ß", Content = "‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏ö‡πâ‡∏≤‡∏ô‡∏ñ‡∏π‡∏Å‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡πÄ‡∏£‡∏µ‡∏¢‡∏ö‡∏£‡πâ‡∏≠‡∏¢", Duration = 3, Icon = "check" })
    end
end

-- ==========================
-- UI Section
-- ==========================
FarmTab:Section({ Title = "üöú ‡∏ü‡∏≤‡∏£‡πå‡∏°" })
FarmTab:Button({ Title = "üíæ ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏ö‡πâ‡∏≤‡∏ô", Callback = saveHomePosition })
FarmTab:Toggle({ Title = "‚öîÔ∏è ‡πÇ‡∏à‡∏°‡∏ï‡∏µ Brainrot ‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥", Default = false, Callback = function(value)
    autoAttackEnabled = value
    if value then
        hasWarpedToHome = false
        startFarming = false
        if not homeSaved and not warnedNoSave then
            l:Notify({ Title = "‚ö†Ô∏è ‡πÇ‡∏õ‡∏£‡∏î‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏ö‡πâ‡∏≤‡∏ô", Content = "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏î üíæ ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏ö‡πâ‡∏≤‡∏ô‡∏Å‡πà‡∏≠‡∏ô", Duration = 5, Icon = "triangle-alert" })
            warnedNoSave = true
        else
            warnedNoSave = false
        end
    end
end})
FarmTab:Toggle({ Title = "üí∏ ‡πÄ‡∏Å‡πá‡∏ö‡πÄ‡∏á‡∏¥‡∏ô‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥‡∏ó‡∏∏‡∏Å 5 ‡∏ß‡∏¥", Default = false, Callback = function(value) autoCollectEnabled = value end })
FarmTab:Toggle({ Title = "üí∞ ‡∏Ç‡∏≤‡∏¢ Brainrot ‡∏ó‡∏∏‡∏Å 20 ‡∏ß‡∏¥", Default = false, Callback = function(value) sellingEnabled = value end })

-- ==========================
-- Get Mission Brainrots
-- ==========================
local function getMissionBrainrots()
    local folder = workspace:FindFirstChild("ScriptedMap") and workspace.ScriptedMap:FindFirstChild("MissionBrainrots")
    if not folder then return {} end
    local list = {}
    for _, v in ipairs(folder:GetChildren()) do
        if v:IsA("Model") then table.insert(list, v) end
    end
    return list
end

local UIS = game:GetService("UserInputService")
local function clickTarget(targetPart)
    if targetPart then
        -- ‡∏™‡∏£‡πâ‡∏≤‡∏á MouseInput ‡∏ö‡∏ô‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢
        local ray = Ray.new(player.Character.Head.Position, (targetPart.Position - player.Character.Head.Position).Unit * 10)
        -- Fire click event ‡πÅ‡∏ö‡∏ö‡πÑ‡∏°‡πà‡∏ï‡πâ‡∏≠‡∏á‡πÅ‡∏™‡∏î‡∏á‡πÄ‡∏°‡πâ‡∏≤‡∏™‡πå
        fireclickdetector(targetPart:FindFirstChildOfClass("ClickDetector"))
    end
end

task.spawn(function()
    while true do
        task.wait(0.05)

        if autoAttackEnabled and player.Character then
            local hrp = player.Character:FindFirstChild("HumanoidRootPart")
            local humanoid = player.Character:FindFirstChild("Humanoid")
            if not hrp or not humanoid then continue end

            humanoid.PlatformStand, humanoid.Sit = false, false

            -- Warp ‡∏ö‡πâ‡∏≤‡∏ô smooth
            if not hasWarpedToHome and homeSaved and homePosition then
                if not hrp:FindFirstChild("FollowBP") then
                    local bp = Instance.new("BodyPosition")
                    bp.Name = "FollowBP"
                    bp.MaxForce = Vector3.new(1e5,1e5,1e5)
                    bp.D = 50
                    bp.P = 10000
                    bp.Position = hrp.Position
                    bp.Parent = hrp

                    local bg = Instance.new("BodyGyro")
                    bg.Name = "FollowBG"
                    bg.MaxTorque = Vector3.new(1e5,1e5,1e5)
                    bg.D = 50
                    bg.CFrame = hrp.CFrame
                    bg.Parent = hrp
                end
                local bp = hrp:FindFirstChild("FollowBP")
                local bg = hrp:FindFirstChild("FollowBG")
                bp.Position = hrp.Position:Lerp(homePosition, lerpSpeed)
                bg.CFrame = CFrame.new(hrp.Position, homePosition)
                if (hrp.Position - homePosition).Magnitude < 2 then
                    hasWarpedToHome = true
                    startFarming = true
                end
            end

            -- ‡∏ü‡∏≤‡∏£‡πå‡∏° Brainrots
            if startFarming then
                local brainrots = getMissionBrainrots()
                local closest, minDist = nil, math.huge
                for _, enemy in ipairs(brainrots) do
                    if enemy and enemy.Parent then
                        local part = enemy:FindFirstChild("HumanoidRootPart") or enemy:FindFirstChildWhichIsA("BasePart")
                        if part then
                            local dist = (part.Position - hrp.Position).Magnitude
                            if dist < minDist then
                                closest = enemy
                                minDist = dist
                            end
                        end
                    end
                end

                if closest and closest.Parent then
                    local targetPart = closest:FindFirstChild("HumanoidRootPart") or closest:FindFirstChildWhichIsA("BasePart")
                    if targetPart then
                        -- ‡∏•‡∏≠‡∏¢‡∏ï‡∏≤‡∏° Brainrot smooth
                        if not hrp:FindFirstChild("FollowBP") then
                            local bp = Instance.new("BodyPosition")
                            bp.Name = "FollowBP"
                            bp.MaxForce = Vector3.new(1e5,1e5,1e5)
                            bp.D = 50
                            bp.P = 10000
                            bp.Position = hrp.Position
                            bp.Parent = hrp

                            local bg = Instance.new("BodyGyro")
                            bg.Name = "FollowBG"
                            bg.MaxTorque = Vector3.new(1e5,1e5,1e5)
                            bg.D = 50
                            bg.CFrame = hrp.CFrame
                            bg.Parent = hrp
                        end
                        local bp = hrp:FindFirstChild("FollowBP")
                        local bg = hrp:FindFirstChild("FollowBG")
                        local desiredPos = targetPart.Position - Vector3.new(0, floatOffset, 0)
                        bp.Position = hrp.Position:Lerp(desiredPos, lerpSpeed)
                        bg.CFrame = CFrame.new(hrp.Position, targetPart.Position)

                        -- ‡∏Ñ‡∏•‡∏¥‡∏Å‡∏ï‡∏µ Brainrot ‡πÅ‡∏ö‡∏ö delay
                        if tick() - lastAttackTime >= attackDelay then
                            pcall(function()
                                clickTarget(targetPart)
                            end)
                            lastAttackTime = tick()
                        end
                    end
                end
            end
        else
            -- ‡∏õ‡∏¥‡∏î‡∏ó‡∏∏‡∏Å‡∏≠‡∏¢‡πà‡∏≤‡∏á
            startFarming = false
            hasWarpedToHome = false
            if player.Character then
                local hrp = player.Character:FindFirstChild("HumanoidRootPart")
                if hrp then
                    local bp = hrp:FindFirstChild("FollowBP")
                    local bg = hrp:FindFirstChild("FollowBG")
                    if bp then bp:Destroy() end
                    if bg then bg:Destroy() end
                end
            end
        end

        -- Auto Collect & Sell ‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡πÄ‡∏î‡∏¥‡∏°
        if autoCollectEnabled and autoAttackEnabled then
            pcall(function() equipRemote:FireServer() end)
            task.wait(5)
        end
        if sellingEnabled and autoAttackEnabled and tick() - lastSellTime >= cooldownTime then
            pcall(function() sellRemote:FireServer() end)
            lastSellTime = tick()
        end
    end
end)





-- ==========================
-- ‡∏õ‡∏£‡∏∞‡∏Å‡∏≤‡∏®‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£ Gear ‡πÅ‡∏•‡∏∞ Seed (‡πÑ‡∏°‡πà‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô)
-- ==========================
local gearsItems = {"Water Bucket","Frost Grenade","Banana Gun","Frost Blower","Carrot Launcher"}
local seedsItems = {"Cactus Seed","Strawberry Seed","Pumpkin Seed","Sunflower Seed","Dragon Fruit Seed","Eggplant Seed","Watermelon Seed","Grape Seed","Cocotank Seed","Carnivorous Plant Seed","Mr Carrot Seed","Tomatrio Seed","Shroombino Seed","Mango Seed","King Limone Seed","Starfruit Seed"}

local autoBuyGears = {}
local autoBuySeeds = {}
for _, gearName in ipairs(gearsItems) do
    autoBuyGears[gearName] = config.autoBuyGears and config.autoBuyGears[gearName] or false
end
for _, seedName in ipairs(seedsItems) do
    autoBuySeeds[seedName] = config.autoBuySeeds and config.autoBuySeeds[seedName] or false
end

local buyAllGearsEnabled = config.buyAllGearsEnabled or false
local buyAllSeedsEnabled = config.buyAllSeedsEnabled or false


-- ==========================
-- Shop Tab
-- ==========================
-- (‡∏¢‡πâ‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏õ‡∏£‡∏∞‡∏Å‡∏≤‡∏®‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£‡∏°‡∏≤‡∏Ç‡πâ‡∏≤‡∏á‡∏ö‡∏ô‡πÅ‡∏•‡πâ‡∏ß)

-- ==========================
-- Section: Gears Shop (‡πÉ‡∏ä‡πâ :Section ‡∏Ç‡∏≠‡∏á WindUI)
