local FarmTab = Window:Tab({
    Title = "üöú ‡∏ü‡∏≤‡∏£‡πå‡∏°", -- ‡πÉ‡∏ä‡πâ Title ‡πÅ‡∏ó‡∏ô Name
    Icon = "leaf", -- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô Icon ‡πÄ‡∏õ‡πá‡∏ô‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏≤‡∏ï‡∏£‡∏ê‡∏≤‡∏ô
})

local EventTab = Window:Tab({
    Title = "üé© ‡∏≠‡∏µ‡πÄ‡∏ß‡∏ô‡∏ó‡πå",
    Icon = "gem",
})

